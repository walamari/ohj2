   private void uusiJoukkue() {       
       if (pelaajakohdalla == null) return; 
       Joukkue tiimi = new Joukkue();
       tiimi.rekisteroi();
       tiimi.vastaaJoukkue(pelaajakohdalla.getPelaajaid()); 
       liiga.lisaa(tiimi);
